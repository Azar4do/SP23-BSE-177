    <script>
        // Retrieve the cart count from localStorage, or default to 0 if not found
        let cartCount = localStorage.getItem('cartCount') ? parseInt(localStorage.getItem('cartCount')) : 0;

        // Function to update cart count and localStorage
        function updateCartCount() {
            const cartBadge = document.getElementById('cart-count');
            if (cartBadge) {
                cartBadge.textContent = cartCount;
                cartBadge.style.display = cartCount > 0 ? 'inline' : 'none';
            }

            // Store the updated cart count in localStorage
            localStorage.setItem('cartCount', cartCount);
        }

        // Function to increment cart count (simulate adding an item to the cart)
        function incrementCart() {
            cartCount += 1; // Increment the cart count by 1
            updateCartCount(); // Update the cart badge and localStorage
        }

        // Function to decrement cart count (simulate removing an item from the cart)
        function decrementCart() {
            if (cartCount > 0) {
                cartCount -= 1; // Decrease the cart count by 1
                updateCartCount(); // Update the cart badge and localStorage
            }
        }

        // Initialize the cart count correctly on page load
        updateCartCount();
    </script>
